<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dalem"
    tools:context=".Main4Activity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#fff"
            android:gravity="center"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/heading"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/text"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Safety Riding adalah Apliksi Panduan Keselamatan dalam Berkendara yang diperuntukan bagi masyarakat Indonesia. Aplikasi ini dibuat dengan tujuan untuk memudahkan bagi pengguna jalan untuk mengetahui hal-hal dalam keselamatan dalam berkendara di jalan raya, dan aplikasi ini juga bertujuan untuk mengurangi tingkat kecelakaan yang terjadi di Indonesia."
                    android:fontFamily="monospace"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sumbersubheading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sumber :"/>

                <TextView
                    android:id="@+id/sumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="1. http://strezcommunitycenter.blogspot.com/2011/06/pengertian-safety-riding.html\n2. https://www.safetyshoe.com/materi-pengertian-perlengkapan-safety-riding-touring/\n3. https://kinibisa.com/artikel/detail/otomotive/subdetai/mengenali-rambu-rambu/read/6-daftar-rambu-lalu-lintas-di-indonesia-yang-perlu-kamu-ketahui\n4. http://www.nusantara-sakti.com/news_event/mengenal_arti_marka_jalan"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>