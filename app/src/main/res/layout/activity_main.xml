<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/motor">

    <Button
        android:id="@+id/submit"
        android:layout_width="50mm"
        android:layout_height="wrap_content"
        android:text="Pengertian Safety Riding"
        android:background="@drawable/custom_button"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:onClick="safetyriding"/>

    <Button
        android:id="@+id/submit1"
        android:layout_width="50mm"
        android:layout_height="wrap_content"
        android:text="Perlengkapan Berkendara"
        android:background="@drawable/custom_button"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:onClick="perlengkapan"/>

    <Button
        android:id="@+id/submit2"
        android:layout_width="50mm"
        android:layout_height="wrap_content"
        android:text="Rambu Lalu Lintas"
        android:background="@drawable/custom_button"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:onClick="rambu"/>

    <Button
        android:id="@+id/submit3"
        android:layout_width="50mm"
        android:layout_height="wrap_content"
        android:text="Garis Marka Jalan"
        android:background="@drawable/custom_button"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:onClick="marka"/>

</LinearLayout>