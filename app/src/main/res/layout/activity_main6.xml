<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dalem"
    android:gravity="center">

    <Button
        android:id="@+id/submit"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:text="Marka Membujur"
        android:background="@drawable/custom_button"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:onClick="membujur"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:text="Marka Melintang"
        android:background="@drawable/custom_button"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:onClick="melintang"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:text="Marka Serong"
        android:background="@drawable/custom_button"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:onClick="serong"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:text="Marka Lambang"
        android:background="@drawable/custom_button"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:onClick="lambang"/>

</LinearLayout>